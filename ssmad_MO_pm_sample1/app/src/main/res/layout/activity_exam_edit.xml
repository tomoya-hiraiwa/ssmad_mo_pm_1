<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ExamEditActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/ee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exam" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/ee_scText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

    <SeekBar
        android:layout_marginTop="10dp"
        android:id="@+id/ee_scseek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Difficulty" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/ee_difText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

    <SeekBar
        android:layout_marginTop="10dp"
        android:id="@+id/ee_difseek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="chart Color"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_margin="10dp"
            android:id="@+id/blue"
            android:padding="1dp"
            android:background="@drawable/rect_red"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <View
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:layout_margin="10dp"
            android:id="@+id/green"
            android:padding="1dp"
            android:background="@drawable/rect"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <View
                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:layout_margin="10dp"
            android:id="@+id/yellow"
            android:padding="1dp"
            android:background="@drawable/rect"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <View
                android:background="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:layout_margin="10dp"
            android:id="@+id/purple"
            android:padding="1dp"
            android:background="@drawable/rect"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <View
                android:background="@color/purple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
    <Button
        android:id="@+id/ee_okbt"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>